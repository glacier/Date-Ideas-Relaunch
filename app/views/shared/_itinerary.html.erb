<h1><%= @datecart.name %></h1>
<!-- TODO: link for prompting to set a date if no date is set -->
<p><%= @datecart.datetime %></p>

<h2>My Notes</h2>
<p><%= @datecart.notes %></p>

<h2>Map</h2>
<%= generate_map @datecart %>

<!-- TODO: link for prompting to set a time for each venue if no time is set -->
<h2>My Itinerary</h2>
<ul>
	<% @datecart.cart_items.each do |item| %>
		<% if item.type == 'event' %>
			<%= render :partial => 'shared/event_item', :locals => {:event => item.event, :title_size => 'event_title_small', :size => '60'} %>
		<% else %>
			<%= render :partial => 'shared/venue_item', :locals => {:business => item.business} %>
		<% end %>
		<hr/>
	<% end %>
</ul>