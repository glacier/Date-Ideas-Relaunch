<% if @user && @user.id %>
    <ul id="settings_dropdown">
      <!-- May not work if no profile is there -->
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/users/<%= @user.id %>/edit">Account Settings</a></li>
      <li><a href="/profiles/<%= @user.id %>">Profile</a></li>
      <li><a href="/users/sign_out">Log out</a></li>
    </ul>
<% else %>
	<ul>
		<li><%= link_to "Login / Sign Up", new_user_session_path, :remote => true %></li>
	</ul>
<% end %>

