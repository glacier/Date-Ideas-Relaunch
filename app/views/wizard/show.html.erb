          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_down.jpeg", :height => '16', :width => '16') %>
            </div>
          </td>
        </tr>
      </table>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3">
    <!-- business list -->
    <table>
    <% @wizard.businesses.each do |business| %>
      <tr>
        <td>
          <div class="di_biz">
          <table>
            <tr>
              <td colspan="2">
                <div class="di_biz_name">
                    <%= business.name %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
              <table>
                <tr>
                  <td rowspan="2" valign="top" align="left">
                    <div class="di_biz_photo">
                        <%= image_tag(business.photo_url) %>
                    </div>
                  </td>
                  <td valign="top">
                    <div class="di_biz_desc">
                      <table>
                        <tr>
                          <td colspan="2">
                            <%= business.text_excerpt %>
                            <%= link_to("Read full reviews","#?w=880",:class=>"poplight",:rel=>business.id) %>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td valign="bottom">
                    <div class="di_biz_yelp_reviews">
                      <%= image_tag("reviews_from_yelp.gif") %>
                      <div class="di_biz_yelp_user_view">
                        <%= business.reviews.first.text_excerpt %><%= image_tag(business.reviews.first.rating_img_url) %>
                        <%= link_to("Read Yelp Review", "#?w=880", :class=>"poplight", :rel=>"popup2") %>
                      </div>
                    </div>
                  </td>
                </tr>
              </table>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <div class="di_biz_addr">
                     <%= display_address(business) %>
                 </div>
              </td>
            </tr>
          </table>
          </div>
        </td>
      </tr>
    <% end %>
    </table>
    </td>
    </tr>
  </table>
<!-- end of business list -->
</div>
</div>
<!-- each business popup -->
<% @wizard.businesses.each do |business| %>
    <%= content_tag(:div,:id=>business.id, :class=>"popup_block") do %>
        <%= business.name %>
        <%= image_tag(business.photo_url) %>
        <%= business.text_excerpt %>
        <%= display_address(business) %>
    <% end %>
<% end %>
