    <td>
      <div class="di_biz">
      <table>
        <tr>
          <td colspan="2">
            <div class="di_biz_name">
                <%= business.name %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
          <table>
            <tr>
              <th rowspan="2">
                <div class="di_biz_photo">
                    <%= image_tag(business.photo_url) %>
                </div>
              </th>
              <td valign="top">
                <div class="di_biz_desc">
                    <%= business.text_excerpt %>
                    <a href="#?w=880" rel="popup2" class="poplight">Read full reviews</a>
                </div>
              </td>
            </tr>
            <tr>
              <td valign="bottom">
                <div class="di_biz_yelp_reviews">
                  <div class="di_biz_yelp_user_view">
                    <%= business.reviews.first.text_excerpt %>
                  </div>
                </div>
              </td>
            </tr>
          </table>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <div class="di_biz_addr">
                 <%= display_address(business) %>
             </div>
          </td>
        </tr>
      </table>
      </div>
    </td>
  </tr>
<% end %>
</table>
</div>
</div>
