        </tr>
        <tr>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("whole_heart.png", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("half_heart.png", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("unlock.png", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_up.jpeg", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_down.jpeg", :height => '16', :width => '16') %>
            </div>
          </td>
        </tr>
      </table>
      </div>
    </td>
    <td>
      <div class="di_main_biz">
      <table>
        <tr>
          <td colspan="10" align="center">
            <%= image_tag(@wizard.activity.photo_url) %>
          </td>
        </tr>
        <tr>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("unlock.png", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_up.jpeg", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_down.jpeg", :height => '16', :width => '16') %>
            </div>
          </td>
        </tr>
      </table>
      </div>
    </td>
    <td>
      <div class="di_main_biz">
      <table>
        <tr>
          <td colspan="10" align="center" style="align:center">
            <%= image_tag(@wizard.dessert.photo_url) %>
          </td>
        </tr>
        <tr>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("unlock.png", :height => '16', :width => '16') %>
            </div>
          </td>
          <td>
            <div class="di_main_biz_icon_image">
              <%= image_tag("thumbs_up.jpeg", :height => '16', :width => '16') %>
