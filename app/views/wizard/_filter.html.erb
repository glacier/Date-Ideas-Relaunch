<div id="di_filter" class="di_module">
	<h4 class="filter_header">Let's get specific</h4>
	<div id="di_filter_section">
		<fieldset>
		  <%= form_tag '/wizard/search', :method => :get do %>
		    <%= select_tag(:location, options_for_select(Wizard::LOCATIONS,@wizard.location), :onchange=> "this.form.submit();") %>
		    <%= select_tag(:neighbourhood, options_for_select(@neighbourhoods.collect { |hood| [hood.neighbourhood]}.push(["All Neighbourhoods", "all_neighbourhoods"]).sort, @wizard.neighbourhood), :onchange => "this.form.submit();") %>
		    <%= select_tag(:venue, options_for_select(Wizard::VENUES,@wizard.venue), :onchange => "this.form.submit();")%>
		    <%= select_tag(:sub_category, options_for_select(@wizard.sub_categories.collect {|c| [c.display_name, c.name ]}.push(['All Subcategories', 'all']).sort, @wizard.sub_category), :onchange => "this.form.submit();") %>
		    <%= select_tag(:price_point, options_for_select(Wizard::PRICE_POINTS), :onchange => "this.form.submit();") %>
		  <% end %>
		</fieldset>
	</div>
</div>