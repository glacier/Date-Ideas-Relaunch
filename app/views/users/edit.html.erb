<div id="user_settings" class="di_module_large">
	<%= generate_ribbon_header :"User Account Settings" %>
	<%= render 'form' %>
</div>

<%= content_for :sidebar_right do %>
	<div id="notifications" class="di_module_medium">
		<h4> Notification Preferences </h4>
		<hr/>

		<h4>Change password</h4>
		<%= render :template => 'devise/passwords/edit', :locals => { :resource => current_user, :resource_name => "user"} %>
	</div>

	<div id="cancel_account" class="di_module_medium">
		<h4> Disable account </h4>
	</div>
<% end %>