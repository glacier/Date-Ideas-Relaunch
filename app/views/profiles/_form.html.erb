<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<table>
		<tbody>
			<tr>
				<td><%=f.label :city %></td>
				<td><%= f.select(:city, [['Toronto', 'toronto'], ['Montreal', 'montreal']], :selected => @profile.city) %></td>
				<td>Your default location</td>
			</tr>
			<tr>
				<td><%=f.label :relationship_status %></td>
				<td><%= f.select :relationship_status, [['Secret', 'secret'], ['Single', 'single'], ['Dating', 'dating'], ['In a relationship', 'in_a_relationship'], ['Engaged', 'engaged'], ['Married', 'married']], :selected => @profile.relationship_status %></td>
				<td></td>
			</tr>
			<tr>
				<td><%=f.label :sig_other_name %></td>
				<td><%= f.text_field :sig_other_name, :title=>"Name of significant other" %></td>
				<td></td>
			</tr>
			<tr>
				<td><%=f.label :anniversary %></td>
				<!-- use date picker here? -->
				<td><%= f.date_select :anniversary, :include_blank => true %></td>
			</tr>
			<tr>
				<td><%=f.label :about_me %></td>
				<td><%= text_area :profile, :about_me, :cols=>80, :rows=>40 %></td>
				<td></td>
			</tr>
		</tbody>
	</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
