<div id="date_plans">
	<h1> Your planned dates </h1>
	<% if user.datecarts.empty? %>
		<p> You have no dates planned! </p>
	<% end %>
	
	<ul>
		<% user.datecarts.each do |datecart| %>
			<li><%= link_to(datecart) do %>
					<%= datecart.name %>
					<% end %> on <%= datecart.datetime %> 
					<%= link_to 'Delete', datecart, :confirm => 'Are you sure?', :method => :delete, :remote => true %>		
			</li>
		<% end %>
	</ul>
</div>