<% if @datecart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datecart.errors.count, "error") %> prohibited this datecart from being saved:</h2>

      <ul>
        <% @datecart.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if @datecart.user_id %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :datetime %>
      <%= form.text_field :datetime, :value => @datecart.display_datetime, :readonly => 1 %>
    </div>

    <div class="field">
      <%= form.label :notes %>
      <%= form.text_field :notes %>
    </div>

<% else %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, :value => "My Date", :onclick=>"this.value=\"\"", :style => "color:gray;" %>

    </div>

    <div class="field">
      <%= form.label :datetime %>
      <%= form.text_field :datetime, :readonly => 1 %>
    </div>

    <div class="field">
      <%= form.label :notes %>
      <%= form.text_field :notes, :value => "Make it special!", :onclick => "this.value=''", :style => "color:gray;" %>
    </div>

<% end %>
