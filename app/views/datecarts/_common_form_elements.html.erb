<% if @datecart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@datecart.errors.count, "error") %> prohibited this datecart from being saved:</h2>

      <ul>
        <% @datecart.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if @datecart.user_id %>
    <tr>
      <td style="width:100px"><%= form.label :name %></td>
      <td><%= form.text_field :name %></td>

    <tr>
      <td><%= form.label :datetime %></td>
      <td><%= form.text_field :datetime, :value => @datecart.display_datetime, :readonly => 1 %></td>
    </tr>

    <tr>
      <td><%= form.label :notes %></td>
      <td><%= form.text_field :notes %></td>
    </tr>

<% else %>

    <tr>
      <td style="width:100px"><%= form.label :name %> </td>
      <td><%= form.text_field :name, :value => "My Date", :onclick=>"this.value=\"\"", :style => "color:gray;" %></td>

    <tr>
      <td> <%= form.label :datetime %></td>
      <td> <%= form.text_field :datetime, :readonly => 1 %></td>
    </tr>

    <tr>
      <td><%= form.label :notes %></td>
      <td><%= form.text_field :notes, :value => "Make it special!", :onclick => "this.value=''", :style => "color:gray;"%></td>
    </tr>

<% end %>
