<%# Full display of the cart %>
<p id="notice"><%= flash[:notice] %></p>
<h2>Your date </h2>
<%= render :partial => 'datecarts/date_info' %>
<div id="datecart_items">
  <%= render :partial => 'datecarts/datecart_items', :locals => {:venue => params['venue']} %>

  <div class='ui-state-dateideas'>
    <%= link_to edit_datecart_path(@datecart), :remote => true do %>
        <span class="ui-icon ui-icon-pencil"></span>
        <span>Edit date plan</span>
    <% end %>
  </div>
</div>
<div id="di_edit_dialog" class="dialog">Dialog</div>
<div id="datecart_<%= @datecart.id %>_calendar_dialog" class="dialog">Calendar Dialog</div>
<div id="di_add_to_date" class="dialog">Dialog</div>
  <%= render :partial => 'datecarts/datecart_functions' %>
<br><br>
<%= link_to "Start Planning!", wizard_index_path, :class => "add_button" %>
