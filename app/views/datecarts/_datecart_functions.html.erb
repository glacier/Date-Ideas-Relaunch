<ul id="di_datecart_functions">
	<% if user_signed_in? %>
		<%# Hacky solution - hide actions that require saving the cart for now %>
		<%# Ideally a login / sign up box should be presented when one of these actions is invoked %>
		<li id="save"><%= link_to 'Save', begin_complete_datecart_path(@datecart), :class => 'function_buttons', :remote => true%></li>
		<li id="email"><%= link_to 'Email',  email_datecart_path(@datecart), :class => 'function_buttons' %></li>
	<% else %>
		<li id="save"><%= link_to 'Save', new_user_session_path(:do_action => "save", :datecart_id => @datecart.id), :class => 'function_buttons', :remote => true %></li>
		<li id="email"><%= link_to 'Email',  new_user_session_path(:do_action => "email", :datecart_id => @datecart.id), :class => 'function_buttons' %></li>
	<% end %>
	
	<li id="calendar"><%= link_to "Add to Calendar", calendar_datecart_path(@datecart), :class => "function_buttons", :remote => true %></li>
	<li id="print"><%= link_to 'Print View', print_datecart_path(@datecart), :class => 'function_buttons', :rel => 'external' %></li>
</ul>