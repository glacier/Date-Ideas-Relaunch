<ul id="di_datecart_functions">
	<% if @user && @user.id %>
		<%# Hacky solution - hide actions that require saving the cart for now %>
		<%# Ideally a login / sign up box should be presented when one of these actions is invoked %>
		<li id="save"><%= link_to 'Save', begin_complete_datecart_path(@datecart), :class => 'function_buttons', :remote => true%></li>
	  <li id="calendar"><%= link_to "Add to Calendar", calendar_datecart_path(@datecart), :class => "function_buttons", :remote => true %></li>
