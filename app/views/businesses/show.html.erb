<%= link_to "Back to results",:back %>
<% biz_photo = business_photo @business %>
<h1 class="venue"><%= @business.name %></h1>

<div id="venue_page_top_section">
	<div id="di_venue_photo">
	  <%= image_tag biz_photo, :width => 393, :height => 296 %>
	</div>
	<div id="di_venue_map">
		 <%= gmaps({"markers" => {"data" => @markers}, "map_options" => {"processing" => "json", "auto_adjust" => true, "auto_zoom" => false, "zoom" => 15}}) %>
	</div>
</div>

<hr/>

<div id="di_venue_info" class="di_module_large">
	<div class="di_module_container">
	   <table>
	      <tr>
	        <td>Price Point</td><td><%= @business.dna_pricepoint %></td>
	        <td>Dress Code</td><td><%= @business.dna_dresscode %></td>
	      </tr><tr>
	        <td>Reservations</td><td><%= @business.takes_reservations %></td>
	        <td>Hours</td><td><%=  raw ((@business.hours.nil?) ? "":@business.hours.join("<br/>")) %></td>
	      </tr><tr>
	        <td>Group date friendly</td><td><%= @business.group_date_friendly %></td>
	        <td>Kid friendly</td><td><%= @business.kids_friendly %></td>
	      </tr>
	    </table>
	</div>
   
</div>

<hr/>

<div id="di_venue_excerpt" class="di_module_large">
	<%= generate_ribbon_header(:h3, "dateideas tips", 17) %>
	<%= raw (!@business.dna_excerpt.nil? && ( @business.reviews.nil? || @business.reviews.length == 0 )) ? "<h3>About</h3>".concat(@business.dna_excerpt) : "" %>
</div>

<div id="di_reviews" class="di_module_large">
	<%= generate_ribbon_header(:h3, "reviews", 17) %>
	<!-- for each yelp review   -->
	<% @business.reviews.each do |r| %>
	  <%= raw display_review_in_venue(@business.external_id, r) %>
	<% end %>
</div>

<%= content_for :sidebar_right do %>
		<%= render @datecart %>
<% end %>